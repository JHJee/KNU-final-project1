    <!------ Include the above in your HEAD tag ---------->
    <title>Sign in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body style="font-family :nanuultra;">
    <div class="message">
        MEDICAL<br>INFORMATION<br>PORTAL
    </div>
    <div class="message_sub">
        KNU MEDICAL INSTITUTE
    </div>

    <% if (!session.userid) {  %>

    <div class="login-container">
        <div>
            <div class="login-form-1">
                <h3>Sign in</h3>
                <form method="post" action="/users/login">
                    <div class="text_form">
                        <input style="margin-top:1vw" type="text" class="form-control_text" placeholder="ID" name='userid' />
                    </div>
                    <div class="text_form">
                        <input type="password" class="form-control_text" placeholder="Password" name='userpw' />
                    </div>
                    <div>
                        <button type="submit" class="btnSubmit" onclick="javascript:openModal(350, 350)">SIGN IN</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <% } %>
    <div class="button_zone">
        <% if (session.userid) { %>

        <form action="/users/logout" method="get" style="display:inline;">
            <input type="submit" class="login_button" value="SIGN OUT">
        </form>

        <% } else { %>
        <button class="login_button" onclick='location.href="/users/login"'>SIGN IN</button>

        <% } %>

      <!-- <button class="sign_button" onclick='location.href="/users/signup"'>SIGN UP</button>--> 

    </div>
    <footer sytle="font-family : nanumUltra;">
            <div
                style="position : absolute; bottom:6.8vw;background-color:rgb(255, 80, 80); width:100%; height:0.1vw;margin-bottom:0.1vw">
            </div>
            <div style="font-size:1.5vw; margin:1vw; margin-bottom:0.5vw;font-weight:100;">
                <p style="position: absolute; margin-left:65vw; margin-top:1.5vw"><i class="fa fa-info-circle"
                        aria-hidden="true"></i> Information</p>
                <p style="position: absolute; margin-left:77vw; margin-top:1.5vw"><i class="fa fa-question-circle-o"
                        aria-hidden="true"></i> Help</p>
                <p style="position: absolute; margin-left:85vw; margin-top:1.5vw"><i class="fa fa-shield"
                        aria-hidden="true"></i> Policy</p>
                <p>2019 KNU Project <br> Team 3</p>
            </div>
            <div style="font-size:0.8vw; margin-left:1vw;">
                Blockchain-linked <br> Medical Information Portal<br>
            </div>
        </footer>
    <div id="modal_back">
        <div id="modal">
            <div>
                <a href="javascript:closeModal()" ;><img src="/images/send2.gif" width="350" height="300" /></a>
                <div style="text-align: center;">블록체인을 통한 본인인증 중입니다.<br>
                    잠시만 기다려주세요.
                </div>
            </div>
        </div>
    </div>
</body>



</html>